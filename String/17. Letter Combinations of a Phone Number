class Solution {
public:
    vector<string> letterCombinations(string digits) {
        vector<string>res;
        if(digits=="")
            return res;
        res.push_back("");
        vector<string>dict(10);
        dict[2] = "abc";
        dict[3] = "def";
        dict[4] = "ghi";
        dict[5] = "jkl";
        dict[6] = "mno";
        dict[7] = "pqrs";
        dict[8] = "tuv";
        dict[9] = "wxyz";
        for(int i=0;i<digits.size();i++)
        {
            int size=res.size();
            for(int j=0;j<size;j++)
            {
                string tmp=res[0];
                res.erase(res.begin());
                for(int k=0;k < dict[digits[i]-'0'].size(); k ++)
                {
                    res.push_back(tmp + dict[digits[i]-'0'][k]);
                }
            }
        }
        return res;
    }
};
